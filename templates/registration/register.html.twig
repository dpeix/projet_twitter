{% extends 'empty.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('theme-tweeter/assets/css/login.css') }}">
{% endblock %}

{% block title %}Sign Up!{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}

    {{ form_errors(registrationForm) }}

    <div class="container">
        <div class="div-1">
            <div class="sub-div-1">
                <i class="fa fa-twitter icon"></i>
            </div>
        </div>
        <div class="div-2">
            <div class="sub-div-2">
                <h3>Sign up for Twitter</h3>
            </div>
        </div>
        <div class="div-3">
            <div class="sub-div-3">
                {{ form_label(registrationForm.username) }}<br>
                {{ form_widget(registrationForm.username) }}
            </div>
        </div>
        <div class="div-3">
            <div class="sub-div-3">
                {{ form_label(registrationForm.email) }}<br>
                {{ form_widget(registrationForm.email) }}
            </div>
        </div>
        <div class="div-3">
            <div class="sub-div-3">
                {{ form_label(registrationForm.birthday) }}<br>
                {{ form_widget(registrationForm.birthday) }}
            </div>
        </div>
        <div class="div-4">
            <div class="sub-div-4">
                {{ form_label(registrationForm.plainPassword.first) }}<br>
                {{ form_widget(registrationForm.plainPassword.first) }}
            </div>
        </div>
        <div class="div-4">
            <div class="sub-div-4">
                {{ form_label(registrationForm.plainPassword.second) }}<br>
                {{ form_widget(registrationForm.plainPassword.second) }}
            </div>
        </div>
        <div class="div-5">
            <div class="sub-div-5">
                <button type="submit">Sign Up</button>
            </div>
        </div>
        <div class="div-6">
            <div class="sub-div-6">
                <a href="#">Already have an account? Log in</a>
            </div>
        </div>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
